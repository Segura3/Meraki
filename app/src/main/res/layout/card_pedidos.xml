<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPedidos"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation = "6dp"
    card_view:contentPadding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/box_wo_radius">

        <ImageView
            android:id="@+id/ivPedidoItem"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/tvPedidoEstatus"
            style="@style/TextAppearance.MdcTypographyStyles.Subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/success_box"
            android:padding="5dp"
            android:text="Procesado" />

        <TextView
            android:id="@+id/tvPedido"
            style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="60dp"
            android:layout_toEndOf="@id/ivPedidoItem"
            android:layout_toRightOf="@id/ivPedidoItem"
            android:text="Pedido N" />

        <TextView
            android:id="@+id/tvPedidoCantidad"
            style="@style/TextAppearance.MdcTypographyStyles.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="55dp"
            android:layout_toEndOf="@id/ivPedidoItem"
            android:layout_toRightOf="@id/ivPedidoItem"
            android:text="Numero de artÃ­culos: #" />


        <TextView
            android:id="@+id/tvPedidoFecha"
            style="@style/TextAppearance.MdcTypographyStyles.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="60dp"
            android:layout_toEndOf="@id/ivPedidoItem"
            android:layout_toRightOf="@id/ivPedidoItem"
            android:text="15 de Marzo de 2022"
            android:textColor="@color/principalBlue" />

        <TextView
            android:id="@+id/tvPedidoPrecio"
            style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="75dp"
            android:text="$0.00" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>